calculadora :: (String, Int, Int) -> Int
calculadora (op, n1, n2) = if(op == "*") then (n1 * n2) else
                           if(op == "+") then (n1 + n2) else 
                           if(op == "-") then (n1 - n2) else
                           if(op == "/") then (div n1 n2)
                           else 0
